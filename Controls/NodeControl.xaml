<UserControl x:Class="CommandFlow.NET.Controls.NodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             MinWidth="180" MinHeight="80">
    <Border x:Name="NodeBorder"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            BorderBrush="{DynamicResource ControlElevationBorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Effect="{DynamicResource ControlElevationShadow}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border x:Name="TitleBar"
                    Grid.Row="0"
                    Background="{DynamicResource AccentFillColorDefaultBrush}"
                    CornerRadius="8,8,0,0"
                    Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ui:SymbolIcon x:Name="NodeIcon" 
                                   Symbol="Flow20" 
                                   FontSize="16" 
                                   Foreground="White"
                                   Margin="0,0,8,0"/>
                    
                    <TextBlock x:Name="TitleText"
                               Grid.Column="1"
                               Text="节点"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    
                    <Border x:Name="ExecutingIndicator"
                            Grid.Column="2"
                            Width="8" Height="8"
                            CornerRadius="4"
                            Background="#4CAF50"
                            Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- 内容区 -->
            <Grid Grid.Row="1" Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 输入端口 -->
                <ItemsControl x:Name="InputPortsControl" 
                              Grid.Column="0"
                              VerticalAlignment="Center">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="-6,4,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="PortDot"
                                         Width="12" Height="12"
                                         Fill="{DynamicResource AccentFillColorDefaultBrush}"
                                         Stroke="{DynamicResource ControlElevationBorderBrush}"
                                         StrokeThickness="2"
                                         Cursor="Hand"
                                         Tag="{Binding}"
                                         MouseLeftButtonDown="Port_MouseLeftButtonDown"
                                         MouseLeftButtonUp="Port_MouseLeftButtonUp"
                                         MouseEnter="Port_MouseEnter"
                                         MouseLeave="Port_MouseLeave">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                                    <Setter Property="Width" Value="16"/>
                                                    <Setter Property="Height" Value="16"/>
                                                    <Setter Property="Fill" Value="#4CAF50"/>
                                                    <Setter Property="StrokeThickness" Value="3"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Name}"
                                           FontSize="11"
                                           Margin="6,0,0,0"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- 状态文本 -->
                <TextBlock x:Name="StatusText"
                           Grid.Column="1"
                           Text="就绪"
                           FontSize="11"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>

                <!-- 输出端口 -->
                <ItemsControl x:Name="OutputPortsControl" 
                              Grid.Column="2"
                              VerticalAlignment="Center">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,4,-6,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Name}"
                                           FontSize="11"
                                           Margin="0,0,6,0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                <Ellipse x:Name="PortDot"
                                         Grid.Column="1"
                                         Width="12" Height="12"
                                         Fill="{DynamicResource AccentFillColorDefaultBrush}"
                                         Stroke="{DynamicResource ControlElevationBorderBrush}"
                                         StrokeThickness="2"
                                         Cursor="Hand"
                                         Tag="{Binding}"
                                         MouseLeftButtonDown="Port_MouseLeftButtonDown"
                                         MouseLeftButtonUp="Port_MouseLeftButtonUp"
                                         MouseEnter="Port_MouseEnter"
                                         MouseLeave="Port_MouseLeave">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                                    <Setter Property="Width" Value="16"/>
                                                    <Setter Property="Height" Value="16"/>
                                                    <Setter Property="Fill" Value="#4CAF50"/>
                                                    <Setter Property="StrokeThickness" Value="3"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Border>
</UserControl>
