<ui:FluentWindow x:Class="CommandFlow.NET.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:CommandFlow.NET"
        xmlns:controls="clr-namespace:CommandFlow.NET.Controls"
        mc:Ignorable="d"
        Title="CommandFlow.NET - 自动化工作流"
        Height="800" Width="1400"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <ui:TitleBar Grid.Row="0" Title="CommandFlow.NET - 自动化工作流">
            <!-- <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/icon.png" />
            </ui:TitleBar.Icon> -->
        </ui:TitleBar>

        <!-- 主内容区 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" MinWidth="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="320" MinWidth="250"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：节点列表 -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 节点列表标题 -->
                    <Border Grid.Row="0" Padding="16,12" 
                            Background="{DynamicResource SubtleFillColorSecondaryBrush}">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Apps24" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="节点库" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </Border>

                    <!-- 节点分类列表 -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="NodeCategoriesControl" Padding="8">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ui:CardExpander Margin="0,4" IsExpanded="True">
                                        <ui:CardExpander.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <ui:SymbolIcon Symbol="Folder24" FontSize="16" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                                            </StackPanel>
                                        </ui:CardExpander.Header>
                                        <ItemsControl ItemsSource="{Binding NodeTypes}" Margin="0,4,0,0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <ui:Card Margin="0,2" Padding="10,8"
                                                             Cursor="Hand"
                                                             MouseMove="NodeItem_MouseMove">
                                                        <StackPanel Orientation="Horizontal">
                                                            <ui:SymbolIcon Symbol="Circle24" FontSize="14" Margin="0,0,8,0"/>
                                                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </ui:Card>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ui:CardExpander>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Center" 
                          Background="Transparent" ShowsPreview="True"/>

            <!-- 中间：工作流画布 -->
            <Border Grid.Column="2" 
                    Background="{DynamicResource ControlFillColorTertiaryBrush}">
                <controls:WorkflowCanvas x:Name="WorkflowCanvas"/>
            </Border>

            <GridSplitter Grid.Column="3" Width="4" HorizontalAlignment="Center" 
                          Background="Transparent" ShowsPreview="True"/>

            <!-- 右侧：控制面板和日志 -->
            <Border Grid.Column="4" 
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                    BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 控制按钮区域 -->
                    <Border Grid.Row="0" Padding="16,12" 
                            Background="{DynamicResource SubtleFillColorSecondaryBrush}">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Settings24" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="控制面板" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="16,12">
                        <!-- 执行控制 -->
                        <TextBlock Text="执行控制" FontWeight="Medium" Margin="0,0,0,8" 
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        <WrapPanel>
                            <ui:Button x:Name="RunButton" 
                                       Icon="{ui:SymbolIcon Play24}" 
                                       Content="运行" 
                                       Appearance="Primary"
                                       Margin="0,0,8,8"
                                       Click="RunButton_Click"/>
                            <ui:Button x:Name="StopButton" 
                                       Icon="{ui:SymbolIcon Stop24}" 
                                       Content="停止" 
                                       Appearance="Danger"
                                       IsEnabled="False"
                                       Margin="0,0,8,8"
                                       Click="StopButton_Click"/>
                        </WrapPanel>

                        <!-- 视图控制 -->
                        <TextBlock Text="视图控制" FontWeight="Medium" Margin="0,16,0,8" 
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        <WrapPanel>
                            <ui:Button Icon="{ui:SymbolIcon ZoomIn24}" 
                                       ToolTip="放大"
                                       Margin="0,0,8,8"
                                       Click="ZoomInButton_Click"/>
                            <ui:Button Icon="{ui:SymbolIcon ZoomOut24}" 
                                       ToolTip="缩小"
                                       Margin="0,0,8,8"
                                       Click="ZoomOutButton_Click"/>
                            <ui:Button Icon="{ui:SymbolIcon ArrowReset24}" 
                                       ToolTip="重置视图"
                                       Margin="0,0,8,8"
                                       Click="ResetViewButton_Click"/>
                        </WrapPanel>

                        <!-- 编辑操作 -->
                        <TextBlock Text="编辑操作" FontWeight="Medium" Margin="0,16,0,8" 
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        <WrapPanel>
                            <ui:Button Icon="{ui:SymbolIcon Delete24}" 
                                       Content="删除选中"
                                       Margin="0,0,8,8"
                                       Click="DeleteButton_Click"/>
                            <ui:Button Icon="{ui:SymbolIcon Broom24}" 
                                       Content="清空全部"
                                       Appearance="Caution"
                                       Margin="0,0,8,8"
                                       Click="ClearButton_Click"/>
                        </WrapPanel>
                    </StackPanel>

                    <!-- 属性面板 -->
                    <Border Grid.Row="2" Padding="16,12" 
                            Background="{DynamicResource SubtleFillColorSecondaryBrush}">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Options24" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="节点属性" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </Border>

                    <!-- 日志区域 -->
                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Padding="16,12" 
                                Background="{DynamicResource SubtleFillColorSecondaryBrush}">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="TextDescription24" FontSize="18" Margin="0,0,8,0"/>
                                    <TextBlock Text="执行日志" FontWeight="SemiBold" FontSize="14"/>
                                </StackPanel>
                                <ui:Button HorizontalAlignment="Right"
                                           Icon="{ui:SymbolIcon Delete24}"
                                           ToolTip="清空日志"
                                           Appearance="Secondary"
                                           Padding="4"
                                           Click="ClearLogButton_Click"/>
                            </Grid>
                        </Border>

                        <Border Grid.Row="1" 
                                Background="{DynamicResource ControlFillColorTertiaryBrush}"
                                Margin="8">
                            <ScrollViewer x:Name="LogScrollViewer" 
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <ItemsControl x:Name="LogControl" Padding="8">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="4,2" Margin="0,1">
                                                <TextBlock TextWrapping="Wrap">
                                                    <Run Text="{Binding Timestamp, StringFormat='[{0:HH:mm:ss}]'}" 
                                                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                                    <Run Text=" "/>
                                                    <Run Text="{Binding Message}" Foreground="{Binding Color}"/>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</ui:FluentWindow>
